@model PersonalBlogApp.Responses.DetailUserResponse;

@{
    ViewData["Title"] = "Details";
}
<div class="mb-3">
    <a class="my-2" href="javascript:history.back()">Back to List</a>
</div>
<h1>
    <img class="rounded-circle" src="@Model.User.Avatar" alt="Avatar" width="70" height="70" />

    @Html.DisplayFor(model => model.User.UserName)
</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Roles)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var role in Model.User.Roles)
                {
                    <p>@role</p>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.LockoutTime)
        </dt>
        <dd class="col-sm-10">
            @(Model.User.LockoutTime == 0 ? "Active" : "Blocked")
        </dd>
    </dl>
    <div>
        <a style="float:right" class="btn btn-primary w-25" asp-action="Edit" asp-route-id="@Model?.User.Id">Edit</a> 
    </div>
</div>
