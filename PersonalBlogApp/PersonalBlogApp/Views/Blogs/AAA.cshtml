@using System.Security.Claims

@{
	ViewData["Title"] = "Blogs";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />


<h1>Blogs</h1>
@{
	var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);

	if (@TempData["Error"] != null)
	{
		<div class="alert alert-danger">@TempData["Error"]</div>
	}
	else if (@TempData["Success"] != null)
	{
		<div class="alert alert-success">@TempData["Success"]</div>
	}
}
<div id="customFilterRow" class="row align-items-end mb-4">
	<div class="col-9">
		<p class="mb-0">
			<a class="btn btn-primary" asp-action="Create">Create New</a>
		</p>
	</div>
	<div class="col-3">
		<form asp-action="Blogs" method="get">
			<div class="d-flex align-items-end">
				<label for="priorityValue" class="form-label me-2">Priority: </label>
				<select name="priorityValue" class="form-select" onchange="this.form.submit()">
					<option selected>Choose</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</select>
			</div>
		</form>
	</div>
</div>
<table id="blogsTable" class="table table-hover pt-3">
	<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th>User post</th>
			<th>Prioriry</th>
			<th>Created date</th>
			<th>Actions</th>
		</tr>
	</thead>
</table>
<script src="/js/blog.js" asp-append-version="true"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="~/js/user.js" asp-append-version="true"></script>
@section Scripts {
	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script>
				$(document).ready(function () {
			$('#blogsTable').DataTable({
				processing: true,
				serverSide: true,
				ajax: {
					url: '/Blogs/Manage',
					type: 'GET'
				},
				columns: [
					{ data: 'title' },
					{ data: 'content' },
					{ data: 'userId' },
					{ data: 'priority' },
					{ data: 'createdDate' },
					{
						data: null,
						orderable: false,
						render: function (data, type, row) {
							let currentUserId = '@currentUserId';
							let isAdmin = '@User.IsInRole("Admin")'.toLowerCase() === 'true';

							let dropdownHtml = `
								<div class="dropdown">
									<button class="btn btn-link dropdown-toggle" type="button" id="blogActionsDropdown-${row.id}" data-bs-toggle="dropdown" aria-expanded="false">
										More
									</button>
									<ul class="dropdown-menu" aria-labelledby="blogActionsDropdown-${row.id}">
							`;

							if (row.userId === currentUserId) {
								dropdownHtml += `
									<li><a class="dropdown-item" href="/Blogs/Edit/${row.id}">Edit</a></li>
								`;
							}

							dropdownHtml += `
								<li><a class="dropdown-item" href="/Blogs/${row.id}">Details</a></li>
							`;

							if (row.userId === currentUserId || isAdmin) {
								dropdownHtml += `
									<li><a class="dropdown-item" style="cursor:pointer" onclick="DeleteBlog('${row.id}')">Delete</a></li>
								`;
							}

							dropdownHtml += `</ul></div>`;
							return dropdownHtml;
						}
					}
				]
			});
		});

	</script>
}